# Ejemplo de archivo .env para el backend
# Copiar este archivo a .env y llenar con tus valores

# ============================================
# BASE DE DATOS - PostgreSQL
# ============================================
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_bd
DATABASE_URL=postgresql://postgres:password@localhost:5432/ecooparts_web

# ============================================
# CACHE - Redis
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# SEGURIDAD - JWT y Contraseñas
# ============================================
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=tu-clave-secreta-muy-larga-y-aleatoria-aqui-minimo-32-caracteres

# Tiempo de expiración de tokens (horas)
TOKEN_EXPIRE_HOURS=24

# ============================================
# CONFIGURACIÓN DE APLICACIÓN
# ============================================
# Nombre de la aplicación
APP_NAME=Ecooparts Web API

# Versión del API
API_VERSION=1.0.0

# Modo de desarrollo (True/False)
DEBUG=False

# Nivel de logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# CORS - Control de acceso
# ============================================
# URLs permitidas para CORS (separadas por comas)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# ============================================
# SCRAPERS - Configuración de web scraping
# ============================================
# Delay entre requests (segundos)
SCRAPER_DELAY=0.5

# Timeout para requests (segundos)
SCRAPER_TIMEOUT=30

# Número de reintentos
SCRAPER_RETRIES=3

# ============================================
# EMAIL (Opcional para recuperación de contraseña)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-contraseña-o-app-password
SMTP_FROM=noreply@ecooparts.com

# ============================================
# FRONTEND
# ============================================
# URL del frontend (para CORS y redirects)
FRONTEND_URL=http://localhost:3000

# ============================================
# AMBIENTE
# ============================================
# development, testing, production
ENVIRONMENT=development

# ============================================
# CELERY (Opcional - para tareas asincrónicas)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# VPS DEPLOYMENT (Para producción)
# ============================================
# Host name del servidor
SERVER_HOST=tu-servidor.com
SERVER_PORT=443

# Usuario para SSH
SSH_USER=ubuntu

# Certificados SSL (Let's Encrypt)
SSL_CERT_PATH=/etc/letsencrypt/live/tu-servidor.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/tu-servidor.com/privkey.pem
